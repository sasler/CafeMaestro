<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CafeMaestro.RoastLogPage"
             Title="Roast Log">
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,10">
            <Label Text="Coffee Roast History" FontSize="24" HorizontalOptions="Center" />
            <SearchBar x:Name="SearchBar" Placeholder="Search by bean type..." TextChanged="OnSearchTextChanged" />
        </VerticalStackLayout>

        <RefreshView Grid.Row="1" x:Name="RoastLogRefreshView" RefreshColor="#512BD4" Command="{Binding RefreshCommand}">
            <CollectionView x:Name="RoastLogCollection" SelectionMode="Single" SelectionChanged="OnRoastSelected">
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No roast logs found" FontSize="18" TextColor="Gray" />
                        <Label Text="Save a roast to see it here" FontSize="14" TextColor="Gray" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="15" BorderColor="LightGray" CornerRadius="5">
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <Label Grid.Row="0" Grid.Column="0" Text="{Binding BeanType}" FontSize="18" FontAttributes="Bold" />
                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding RoastDate, StringFormat='{0:MM/dd/yyyy}'}" FontSize="14" TextColor="Gray" />
                                
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                       Text="{Binding Summary}" 
                                       FontSize="16" />
                                
                                <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="15" Margin="0,5,0,0">
                                    <Label Text="{Binding WeightLossPercentage, StringFormat='Loss: {0:F1}%'}" 
                                           FontSize="14" TextColor="#808080" />
                                    <Label Text="{Binding FormattedTime, StringFormat='Time: {0}'}" 
                                           FontSize="14" TextColor="#808080" />
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <HorizontalStackLayout Grid.Row="2" Spacing="10" Margin="0,10,0,0" HorizontalOptions="Center">
            <Button x:Name="DataFileButton" 
                   Text="Data File"
                   Clicked="DataFileButton_Clicked"
                   BackgroundColor="#008000"
                   TextColor="White"
                   WidthRequest="120" />
            <Button x:Name="ExportButton" 
                   Text="Export to CSV"
                   Clicked="ExportButton_Clicked"
                   BackgroundColor="#0078D4"
                   TextColor="White"
                   WidthRequest="120" />
            <Button x:Name="BackButton" 
                   Text="Back" 
                   Clicked="BackButton_Clicked"
                   BackgroundColor="#512BD4"
                   TextColor="White"
                   WidthRequest="100" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>