<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CafeMaestro.RoastLogPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             Title="Roast Log">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="0" Margin="0">
        <!-- Header Area -->
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*,Auto"
              Padding="20,20"
              HeightRequest="100"
              HorizontalOptions="Fill"
              Margin="0">
            <!-- Logo and Title -->
            <Image Grid.Column="0"
                   Source="log_icon.png"
                   HeightRequest="60"
                   WidthRequest="60"
                   Aspect="AspectFit"
                   VerticalOptions="Center"/>
            <Label Grid.Column="1"
                   Text="Roast Log"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   TextColor="{DynamicResource PrimaryColor}"
                   Margin="16,0,0,0"/>
            <!-- Record count indicator -->
            <Border Grid.Column="2"
                    Padding="8,4"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    StrokeShape="RoundRectangle 8">
                <VerticalStackLayout>
                    <Label x:Name="RecordCountLabel"
                           Text="Records: 0"
                           FontSize="12"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>
        </Grid>
        
        <!-- Content Area with CollectionView -->
        <RefreshView x:Name="RoastLogRefreshView"
                     Grid.Row="1"
                     IsRefreshing="False" 
                     Command="{Binding RefreshCommand}">
            <!-- Direct child of RefreshView should be CollectionView -->
            <CollectionView x:Name="RoastLogCollection"
                          SelectionMode="Single"
                          SelectionChanged="OnRoastSelected"
                          Margin="20,10,20,10">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="16" />
                </CollectionView.ItemsLayout>
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No roast logs found"
                               FontSize="18"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                        <Label Text="Save a roast to see it here"
                               FontSize="14"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,6"
                                Padding="16"
                                StrokeShape="RoundRectangle 12"
                                Stroke="{DynamicResource BorderColor}"
                                StrokeThickness="0.5"
                                BackgroundColor="{DynamicResource NeutralColor}">
                            <Border.Shadow>
                                <Shadow Brush="#20000000"
                                        Offset="0,3"
                                        Radius="6"
                                        Opacity="0.2"/>
                            </Border.Shadow>
                            <Grid RowDefinitions="Auto,Auto,Auto"
                                  ColumnDefinitions="*,Auto">
                                <Label Grid.Row="0"
                                       Grid.Column="0"
                                       Text="{Binding BeanType}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Label Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding RoastDate, StringFormat='{0:MM/dd/yyyy}'}"
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light=Gray, Dark=#BBBBBB}"/>

                                <Label Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding Summary}"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="16"/>

                                <HorizontalStackLayout Grid.Row="2"
                                                       Grid.Column="0"
                                                       Grid.ColumnSpan="2"
                                                       Spacing="15"
                                                       Margin="0,5,0,0">
                                    <Label Text="{Binding WeightLossPercentage, StringFormat='Loss: {0:F1}%'}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light=#808080, Dark=#AAAAAA}"/>
                                    <Label Text="{Binding FormattedTime, StringFormat='Time: {0}'}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light=#808080, Dark=#AAAAAA}"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        
        <!-- Button bar at bottom -->
        <HorizontalStackLayout Grid.Row="2"
                               Spacing="10"
                               Padding="20"
                               HorizontalOptions="Center">
            <Button x:Name="ImportButton"
                    Text="Import CSV"
                    Clicked="ImportButton_Clicked"
                    BackgroundColor="{DynamicResource AccentColor}"
                    TextColor="{DynamicResource ButtonTextColor}"
                    WidthRequest="120"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>