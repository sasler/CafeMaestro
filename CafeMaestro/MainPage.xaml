<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CafeMaestro.MainPage"
             Title="CafeMaestro"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             Padding="0">
       <ScrollView Padding="0"
                     Margin="0">
              <Grid RowDefinitions="Auto, *"
                    Padding="0"
                    Margin="0">
                     <!-- Header Area - Clean Design -->
                     <Grid Grid.Row="0"
                           ColumnDefinitions="Auto,*"
                           Padding="20,20"
                           HeightRequest="120"
                           HorizontalOptions="Fill"
                           Margin="0">
                            <!-- Logo and Title within Header -->
                            <Image Grid.Column="0"
                                   Source="cafemaestro_logo.png"
                                   HeightRequest="100"
                                   WidthRequest="100"
                                   Aspect="AspectFit"
                                   VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1"
                                                 Spacing="0"
                                                 VerticalOptions="Center"
                                                 Margin="16,0,0,0">
                                   <Label Text="CafeMaestro"
                                          FontSize="32"
                                          FontAttributes="Bold"
                                          HorizontalOptions="Start"
                                          TextColor="{DynamicResource PrimaryColor}"/>
                                   <Label Text="ROAST - BREW - SAVOR - REPEAT"
                                          FontSize="14"
                                          HorizontalOptions="Start"
                                          TextColor="{DynamicResource SecondaryTextColor}"
                                          Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                     </Grid>
                     <!-- Main Content Area -->
                     <VerticalStackLayout Grid.Row="1"
                                          Padding="24,0,24,24"
                                          Spacing="20"
                                          Margin="0,10,0,0">                            
                            <!-- Data File Info Box -->
                            <Border StrokeShape="RoundRectangle 12"
                                   Stroke="{DynamicResource BorderColor}"
                                   StrokeThickness="0.5"
                                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                                   Padding="16,12"
                                   Margin="0,0,0,10">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Data File Information"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource TextColor}"/>
                                    <Label x:Name="DataFileNameLabel"
                                           Text="File: cafemaestro_data.json"
                                           FontSize="12"
                                           TextColor="{DynamicResource SecondaryTextColor}"/>
                                    <Label x:Name="DataStatsLabel"
                                           Text="Beans: 0  |  Roasts: 0"
                                           FontSize="12"
                                           TextColor="{DynamicResource SecondaryTextColor}"/>
                                </VerticalStackLayout>
                            </Border>
                            
                            <!-- Navigation Cards - Modern Card-based UI -->
                            <Border StrokeShape="RoundRectangle 16"
                                   Stroke="{DynamicResource BorderColor}"
                                   StrokeThickness="0.5"
                                   BackgroundColor="{DynamicResource PrimaryColor}"
                                   Padding="20,16"
                                   Style="{StaticResource NavigationCardStyle}">
                                <Border.Shadow>
                                    <Shadow Brush="{DynamicResource PrimaryColor}"
                                            Offset="0,3"
                                            Radius="8"
                                            Opacity="0.3" />
                                </Border.Shadow>
                                <Grid ColumnDefinitions="Auto,*">
                                    <Image Grid.Column="0"
                                           Source="roast_icon.png"
                                           HeightRequest="36"
                                           WidthRequest="36"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Column="1"
                                           Text="Start Roasting"
                                           TextColor="White"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           Margin="10,0,0,0"/>
                                </Grid>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="GoToRoastPage_Clicked"/>
                                </Border.GestureRecognizers>
                            </Border>                            <Grid ColumnDefinitions="*,*"
                                  ColumnSpacing="16">
                                <!-- Beans Button Card -->
                                <Border Grid.Column="0"
                                       StrokeShape="RoundRectangle 16"
                                       Stroke="{DynamicResource BorderColor}"
                                       StrokeThickness="0.5"
                                       BackgroundColor="{DynamicResource SecondaryColor}"
                                       Padding="16,18"
                                       Style="{StaticResource NavigationCardStyle}">
                                    <Border.Shadow>
                                        <Shadow Brush="{DynamicResource SecondaryColor}"
                                                Offset="0,3"
                                                Radius="8"
                                                Opacity="0.3" />
                                    </Border.Shadow>
                                    <Grid RowDefinitions="Auto,Auto"
                                          RowSpacing="8">
                                        <Image Grid.Row="0"
                                               Source="beans_icon.png"
                                               HeightRequest="32"
                                               WidthRequest="32"
                                               HorizontalOptions="Center"/>
                                        <Label Grid.Row="1"
                                               Text="Beans"
                                               TextColor="White"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"/>
                                    </Grid>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="GoToBeanInventory_Clicked"/>
                                    </Border.GestureRecognizers>
                                </Border>

                                <!-- Roast Log Button Card -->
                                <Border Grid.Column="1"
                                       StrokeShape="RoundRectangle 16"
                                       Stroke="{DynamicResource BorderColor}"
                                       StrokeThickness="0.5"
                                       BackgroundColor="{DynamicResource SecondaryColor}"
                                       Padding="16,18"
                                       Style="{StaticResource NavigationCardStyle}">
                                    <Border.Shadow>
                                        <Shadow Brush="{DynamicResource SecondaryColor}"
                                                Offset="0,3"
                                                Radius="8"
                                                Opacity="0.3" />
                                    </Border.Shadow>
                                    <Grid RowDefinitions="Auto,Auto"
                                          RowSpacing="8">
                                        <Image Grid.Row="0"
                                               Source="log_icon.png"
                                               HeightRequest="32"
                                               WidthRequest="32"
                                               HorizontalOptions="Center"/>
                                        <Label Grid.Row="1"
                                               Text="Roast Log"
                                               TextColor="White"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"/>
                                    </Grid>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="GoToRoastLog_Clicked"/>
                                    </Border.GestureRecognizers>
                                </Border>
                            </Grid>                            <!-- Settings Button Card -->
                            <Border StrokeShape="RoundRectangle 16"
                                   Stroke="{DynamicResource BorderColor}"
                                   StrokeThickness="0.5"
                                   BackgroundColor="{DynamicResource TertiaryColor}"
                                   Padding="20,16"
                                   Margin="0,4,0,0"
                                   Style="{StaticResource NavigationCardStyle}">
                                <Border.Shadow>
                                    <Shadow Brush="{DynamicResource TertiaryColor}"
                                            Offset="0,3"
                                            Radius="8"
                                            Opacity="0.3" />
                                </Border.Shadow>
                                <Grid ColumnDefinitions="Auto,*">
                                    <Image Grid.Column="0"
                                           Source="settings_icon.png"
                                           HeightRequest="30"
                                           WidthRequest="30"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Column="1"
                                           Text="Settings"
                                           TextColor="White"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center"
                                           Margin="10,0,0,0"/>
                                </Grid>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="GoToSettings_Clicked"/>
                                </Border.GestureRecognizers>
                            </Border>
                     </VerticalStackLayout>
              </Grid>
       </ScrollView>
</ContentPage>
