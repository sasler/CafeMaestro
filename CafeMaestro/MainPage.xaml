<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CafeMaestro.MainPage"
             Title="CafeMaestro">
    <ScrollView BackgroundColor="{DynamicResource PageBackgroundColor}">
        <VerticalStackLayout Padding="30,20" Spacing="25" BackgroundColor="{DynamicResource PageBackgroundColor}" VerticalOptions="Center">
            <!-- Logo and Title -->
            <Image Source="cafemaestro_logo.png" HeightRequest="300" Aspect="AspectFit" />
            <Label Text="CafeMaestro"
                   FontFamily="Comic Sans MS"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource PrimaryColor}"
                   Margin="0,-40,0,10"/>
            <Label Text="Your Coffee Roasting Companion" FontSize="20" HorizontalOptions="Center" TextColor="{DynamicResource PrimaryTextColor}" Margin="0,0,0,20"/>

            <!-- Navigation Grid -->
            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" RowSpacing="15" ColumnSpacing="15">

                <!-- Roast Button -->
                <Image Grid.Row="0" Grid.Column="0" Source="roaster.png" HeightRequest="40" WidthRequest="40" VerticalOptions="Center"/>
                <Button Grid.Row="0" Grid.Column="1" Text="Roast"
                        Clicked="GoToRoastPage_Clicked"
                        BackgroundColor="{DynamicResource PrimaryColor}"
                        TextColor="{DynamicResource ButtonTextColor}"
                        HorizontalOptions="Fill"
                        HeightRequest="50"
                        FontSize="18"/>

                <!-- Beans Button -->
                <Image Grid.Row="1" Grid.Column="0" Source="beans_icon.png" HeightRequest="40" WidthRequest="40" VerticalOptions="Center"/>
                <Button Grid.Row="1" Grid.Column="1" Text="Beans"
                        Clicked="GoToBeanInventory_Clicked"
                        BackgroundColor="{DynamicResource SecondaryColor}"
                        TextColor="{DynamicResource ButtonTextColor}"
                        HorizontalOptions="Fill"
                        HeightRequest="50"
                        FontSize="18"/>

                <!-- Roast Log Button -->
                <Image Grid.Row="2" Grid.Column="0" Source="log_icon.png" HeightRequest="40" WidthRequest="40" VerticalOptions="Center"/>
                <Button Grid.Row="2" Grid.Column="1" Text="Roast Log"
                        Clicked="GoToRoastLog_Clicked"
                        BackgroundColor="{DynamicResource SecondaryColor}"
                        TextColor="{DynamicResource ButtonTextColor}"
                        HorizontalOptions="Fill"
                        HeightRequest="50"
                        FontSize="18"/>

                <!-- Settings Button -->
                <Image Grid.Row="3" Grid.Column="0" Source="settings_icon.png" HeightRequest="40" WidthRequest="40" VerticalOptions="Center"/>
                <Button Grid.Row="3" Grid.Column="1" Text="Settings"
                        Clicked="GoToSettings_Clicked"
                        BackgroundColor="{DynamicResource TertiaryColor}"
                        TextColor="{DynamicResource ButtonTextColor}"
                        HorizontalOptions="Fill"
                        HeightRequest="50"
                        FontSize="18"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
