<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="CafeMaestro.LightTheme">
    <!-- Base theme colors - Modern Coffee Palette -->
    <Color x:Key="PageBackgroundColor">#FAFAFA</Color>
    <Color x:Key="NavigationBarColor">#F6E7D8</Color> <!-- Light cream -->
    <Color x:Key="PrimaryColor">#C85A17</Color> <!-- Vibrant coffee orange -->
    <Color x:Key="SecondaryColor">#D87C58</Color> <!-- Light roast orange -->
    <Color x:Key="TertiaryColor">#895143</Color> <!-- Medium brown -->
    <Color x:Key="NeutralColor">#F0F0F0</Color>
    
    <!-- Text colors -->
    <Color x:Key="PrimaryTextColor">#202020</Color>
    <Color x:Key="SecondaryTextColor">#404040</Color>
    <Color x:Key="TertiaryTextColor">#606060</Color>
    <Color x:Key="PlaceholderColor">#909090</Color>
    <Color x:Key="InverseTextColor">White</Color>
    <Color x:Key="ButtonTextColor">White</Color>
    <Color x:Key="TimerInstructionColor">#606060</Color>
      <!-- Input control colors -->
    <Color x:Key="EntryBackgroundColor">#f8f8f8</Color>
    <Color x:Key="EntryBorderColor">#c0c0c0</Color>
    <Color x:Key="PickerBackgroundColor">#f8f8f8</Color>
    <Color x:Key="PickerBorderColor">#c0c0c0</Color>
    
    <!-- Border/separator colors -->
    <Color x:Key="BorderColor">#d0d0d0</Color>
    <Color x:Key="SeparatorColor">#e0e0e0</Color>
    <Color x:Key="TimerBorderColor">#404040</Color>
    
    <!-- Misc -->
    <Color x:Key="TransparentColor">Transparent</Color>
    <Color x:Key="ErrorColor">#B00020</Color>
    <Color x:Key="SuccessColor">#00A36C</Color>
</ResourceDictionary>
