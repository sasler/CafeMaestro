<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="CafeMaestro.DarkTheme">
    <!-- Base theme colors - Modern Vibrant Palette -->
    <Color x:Key="PageBackgroundColor">#121212</Color>
    <Color x:Key="NavigationBarColor">#1E1E1E</Color> <!-- Dark grey -->
    <Color x:Key="PrimaryColor">#42A5F5</Color> <!-- Bright blue -->
    <Color x:Key="SecondaryColor">#4DB6AC</Color> <!-- Light teal -->
    <Color x:Key="TertiaryColor">#9FA8DA</Color> <!-- Light indigo -->
    <Color x:Key="NeutralColor">#2D2D2D</Color> <!-- Dark grey -->
    <Color x:Key="AccentColor">#FFAC563B</Color> <!-- Bright orange -->

    <!-- Text colors -->
    <Color x:Key="PrimaryTextColor">White</Color>
    <Color x:Key="SecondaryTextColor">#e0e0e0</Color>
    <Color x:Key="TertiaryTextColor">#c0c0c0</Color>
    <Color x:Key="PlaceholderColor">#909090</Color>
    <Color x:Key="InverseTextColor">#202020</Color>
    <Color x:Key="ButtonTextColor">White</Color>
    <Color x:Key="TimerInstructionColor">#a0a0a0</Color>
    
    <!-- Input control colors -->
    <Color x:Key="EntryBackgroundColor">#333333</Color>
    <Color x:Key="EntryBorderColor">#505050</Color>
    <Color x:Key="PickerBackgroundColor">#333333</Color>
    <Color x:Key="PickerBorderColor">#505050</Color>
    
    <!-- Border/separator colors -->
    <Color x:Key="BorderColor">#505050</Color>
    <Color x:Key="SeparatorColor">#404040</Color>
    <Color x:Key="TimerBorderColor">#8B4513</Color> <!-- Match Primary -->
    
    <!-- SwipeView action colors -->
    <Color x:Key="SwipeEditColor">#2196F3</Color> <!-- Brighter blue for edit actions in dark mode -->
    <Color x:Key="SwipeDeleteColor">#FF5252</Color> <!-- Brighter red for delete actions in dark mode -->
    
    <!-- Misc -->
    <Color x:Key="TransparentColor">Transparent</Color>
    <Color x:Key="ErrorColor">#FF6B6B</Color>
    <Color x:Key="SuccessColor">#00E676</Color>
</ResourceDictionary>
