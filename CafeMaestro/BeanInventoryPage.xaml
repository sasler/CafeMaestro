<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CafeMaestro.BeanInventoryPage"
             Title="Bean Inventory">

    <ScrollView BackgroundColor="{DynamicResource PageBackgroundColor}">
        <VerticalStackLayout Padding="30,20"
                             Spacing="15"
                             BackgroundColor="{DynamicResource PageBackgroundColor}">

            <!-- Add Page Icon -->
            <Image Source="beans_icon.png"
                   HeightRequest="150"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            <Label Text="Coffee Beans"
                   FontFamily="Comic Sans MS"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource PrimaryColor}"
                   Margin="0,-40,0,10"/>

            <SearchBar x:Name="SearchBar"
                       Placeholder="Search beans..."
                       TextChanged="OnSearchTextChanged"
                       TextColor="{DynamicResource PrimaryTextColor}"
                       PlaceholderColor="{DynamicResource PlaceholderColor}"
                       BackgroundColor="{DynamicResource EntryBackgroundColor}"/>

            <RefreshView x:Name="BeansRefreshView"
                         RefreshColor="{DynamicResource PrimaryColor}"
                         Command="{Binding RefreshCommand}">
                <CollectionView x:Name="BeansCollection"
                                SelectionMode="Single"
                                SelectionChanged="OnBeanSelected"
                                Background="{DynamicResource PageBackgroundColor}">
                    <CollectionView.EmptyView>
                        <StackLayout HorizontalOptions="Center"
                                     VerticalOptions="Center">
                            <Label Text="No beans in inventory"
                                   FontSize="18"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Text="Click '+' to add new beans"
                                   FontSize="14"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </StackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>
                                <SwipeView.LeftItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Edit"
                                                   BackgroundColor="#0078D4"
                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=EditBeanCommand}"
                                                   CommandParameter="{Binding .}"/>
                                    </SwipeItems>
                                </SwipeView.LeftItems>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Delete"
                                                   BackgroundColor="#ff3b30"
                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=DeleteBeanCommand}"
                                                   CommandParameter="{Binding .}"/>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                <Border Margin="0,5"
                                        Padding="15"
                                        Stroke="{DynamicResource BorderColor}"
                                        BackgroundColor="{DynamicResource PageBackgroundColor}">
                                    <Grid RowDefinitions="Auto,Auto,Auto"
                                          ColumnDefinitions="*,Auto">
                                        <Label Grid.Row="0"
                                               Grid.Column="0"
                                               Text="{Binding DisplayName}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource PrimaryTextColor}"/>
                                        <Label Grid.Row="0"
                                               Grid.Column="1"
                                               Text="{Binding PurchaseDate, StringFormat='{0:MM/dd/yyyy}'}"
                                               FontSize="14"
                                               TextColor="{AppThemeBinding Light=Gray, Dark=#BBBBBB}"/>

                                        <Label Grid.Row="1"
                                               Grid.Column="0"
                                               Grid.ColumnSpan="2"
                                               Text="{Binding ProcessAndVarietyDisplay}"
                                               TextColor="{DynamicResource PrimaryTextColor}"
                                               FontSize="16"/>

                                        <HorizontalStackLayout Grid.Row="2"
                                                               Grid.Column="0"
                                                               Grid.ColumnSpan="2"
                                                               Spacing="15"
                                                               Margin="0,5,0,0">
                                            <Label Text="{Binding QuantityDisplay}"
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light=#808080, Dark=#AAAAAA}"/>
                                            <Label Text="{Binding PriceDisplay}"
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light=#808080, Dark=#AAAAAA}"/>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Border>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
            <HorizontalStackLayout Spacing="10"
                                   Margin="0,10,0,0"
                                   HorizontalOptions="End">
                <Button x:Name="BackButton"
                        Text="Back"
                        Clicked="BackButton_Clicked"
                        BackgroundColor="{DynamicResource SecondaryColor}"
                        TextColor="{DynamicResource ButtonTextColor}"
                        WidthRequest="100"/>
                <Button x:Name="AddBeanButton"
                        Text="+"
                        Clicked="AddBean_Clicked"
                        BackgroundColor="{DynamicResource PrimaryColor}"
                        TextColor="{DynamicResource ButtonTextColor}"
                        FontSize="24"
                        WidthRequest="60"
                        HeightRequest="60"
                        CornerRadius="30"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>