<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CafeMaestro.BeanInventoryPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             Title="Bean Inventory">

    <Grid RowDefinitions="Auto,*"
          Padding="0"
          Margin="0">
        <!-- Header Area -->
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*,Auto"
              Padding="20,20"
              HeightRequest="100"
              HorizontalOptions="Fill"
              Margin="0">
            <!-- Logo and Title -->
            <Image Grid.Column="0"
                   Source="beans_icon.png"
                   HeightRequest="60"
                   WidthRequest="60"
                   Aspect="AspectFit"
                   VerticalOptions="Center"/>
            <Label Grid.Column="1"
                   Text="Coffee Beans"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   TextColor="{DynamicResource PrimaryColor}"
                   Margin="16,0,0,0"/>
            <!-- Action buttons and record count in the top right -->
            <HorizontalStackLayout Grid.Column="2"
                                   Spacing="10"
                                   VerticalOptions="Center">
                <ImageButton x:Name="AddBeanButton"
                             Source="add_icon.png"
                             Clicked="AddBean_Clicked"
                             BackgroundColor="{DynamicResource PrimaryColor}"
                             WidthRequest="50"
                             HeightRequest="50"
                             Padding="5"
                             CornerRadius="25"/>

                <ImageButton x:Name="ImportButton"
                             Source="import_icon.png"
                             Clicked="ImportButton_Clicked"
                             BackgroundColor="{DynamicResource TertiaryColor}"
                             WidthRequest="50"
                             HeightRequest="50"
                             Padding="5"
                             CornerRadius="25"/>

                <Border BackgroundColor="{DynamicResource PrimaryColor}"
                        WidthRequest="50"
                        HeightRequest="50"
                        Stroke="{DynamicResource BorderColor}"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 25">
                    <Label x:Name="RecordCountLabel"
                           Text="0"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
            </HorizontalStackLayout>
        </Grid>

        <!-- Content Area with CollectionView -->
        <RefreshView x:Name="BeansRefreshView"
                     Grid.Row="1"
                     IsRefreshing="False"
                     Command="{Binding RefreshCommand}">
            <!-- Direct child of RefreshView should be CollectionView -->
            <CollectionView x:Name="BeansCollection"
                            SelectionMode="None"
                            Margin="20,10,20,10">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"
                                       ItemSpacing="16"/>
                </CollectionView.ItemsLayout>
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center"
                                 VerticalOptions="Center">
                        <Label Text="No beans in inventory"
                               FontSize="18"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                        <Label Text="Click '+' to add new beans"
                               FontSize="14"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem IconImageSource="delete_icon.png"
                                               BackgroundColor="{DynamicResource SwipeDeleteColor}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=DeleteBeanCommand}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem IconImageSource="edit_icon.png"
                                               BackgroundColor="{DynamicResource SwipeEditColor}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=EditBeanCommand}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Border Margin="0,6"
                                    Padding="16"
                                    StrokeShape="RoundRectangle 12"
                                    Stroke="{DynamicResource BorderColor}"
                                    StrokeThickness="0.5"
                                    BackgroundColor="{DynamicResource NeutralColor}"
                                    Style="{StaticResource ItemCardStyle}">
                                <Border.Shadow>
                                    <Shadow Brush="#20000000"
                                            Offset="0,3"
                                            Radius="6"
                                            Opacity="0.2"/>
                                </Border.Shadow>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=ItemTappedCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Border.GestureRecognizers>
                                <Grid RowDefinitions="Auto,Auto,Auto"
                                      ColumnDefinitions="*,Auto">
                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Text="{Binding DisplayName}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Label Grid.Row="0"
                                           Grid.Column="1"
                                           Text="{Binding PurchaseDate, StringFormat='{0:MM/dd/yyyy}'}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light=Gray, Dark=#BBBBBB}"/>

                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Text="{Binding ProcessAndVarietyDisplay}"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="16"/>

                                    <HorizontalStackLayout Grid.Row="2"
                                                           Grid.Column="0"
                                                           Grid.ColumnSpan="2"
                                                           Spacing="15"
                                                           Margin="0,5,0,0">
                                        <Label Text="{Binding QuantityDisplay}"
                                               FontSize="14"
                                               TextColor="{AppThemeBinding Light=#808080, Dark=#AAAAAA}"/>
                                        <Label Text="{Binding PriceDisplay}"
                                               FontSize="14"
                                               TextColor="{AppThemeBinding Light=#808080, Dark=#AAAAAA}"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>