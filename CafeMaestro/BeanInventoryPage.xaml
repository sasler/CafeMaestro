<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CafeMaestro.BeanInventoryPage"
             Title="Bean Inventory">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,10">
            <Label Text="Coffee Bean Inventory" FontSize="24" HorizontalOptions="Center" />
            <SearchBar x:Name="SearchBar" Placeholder="Search beans..." TextChanged="OnSearchTextChanged" />
        </VerticalStackLayout>

        <RefreshView Grid.Row="1" x:Name="BeansRefreshView" RefreshColor="#512BD4" Command="{Binding RefreshCommand}">
            <CollectionView x:Name="BeansCollection" SelectionMode="Single" SelectionChanged="OnBeanSelected">
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No beans in inventory" FontSize="18" TextColor="Gray" />
                        <Label Text="Click '+' to add new beans" FontSize="14" TextColor="Gray" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem Text="Edit" 
                                              BackgroundColor="#0078D4" 
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=EditBeanCommand}" 
                                              CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete" 
                                              BackgroundColor="#ff3b30" 
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=DeleteBeanCommand}" 
                                              CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>                            <Frame Margin="0,5" Padding="15" BorderColor="{AppThemeBinding Light=LightGray, Dark=#444444}" 
                                   BackgroundColor="{AppThemeBinding Light=White, Dark=#333333}" 
                                   CornerRadius="5">
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding DisplayName}" FontSize="18" FontAttributes="Bold" 
                                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding PurchaseDate, StringFormat='{0:MM/dd/yyyy}'}" FontSize="14" 
                                           TextColor="{AppThemeBinding Light=Gray, Dark=#BBBBBB}" />
                                    
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                           Text="{Binding ProcessAndVarietyDisplay}" 
                                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                           FontSize="16" />
                                    
                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="15" Margin="0,5,0,0">
                                        <Label Text="{Binding QuantityDisplay}" 
                                               FontSize="14" TextColor="{AppThemeBinding Light=#808080, Dark=#AAAAAA}" />
                                        <Label Text="{Binding PriceDisplay}" 
                                               FontSize="14" TextColor="{AppThemeBinding Light=#808080, Dark=#AAAAAA}" />
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <HorizontalStackLayout Grid.Row="2" Spacing="10" Margin="0,10,0,0" HorizontalOptions="End">
            <Button x:Name="BackButton" 
                   Text="Back" 
                   Clicked="BackButton_Clicked"
                   BackgroundColor="#0078D4"
                   TextColor="White"
                   WidthRequest="100" />
            <Button x:Name="AddBeanButton" 
                   Text="+" 
                   Clicked="AddBean_Clicked"
                   BackgroundColor="#512BD4"
                   TextColor="White"
                   FontSize="24"
                   WidthRequest="60"
                   HeightRequest="60"
                   CornerRadius="30" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>