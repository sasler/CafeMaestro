<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CafeMaestro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CafeMaestro"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home" Icon="home_icon.png">
        <ShellContent
            Title="Coffee Roasting"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Roast" Icon="roaster.png">
        <ShellContent
            Title="Roast Coffee"
            ContentTemplate="{DataTemplate local:RoastPage}"
            Route="RoastPage" />
    </FlyoutItem>

    <FlyoutItem Title="Roast Log" Icon="log_icon.png">
        <ShellContent
            Title="Roast History"
            ContentTemplate="{DataTemplate local:RoastLogPage}"
            Route="RoastLogPage" />
    </FlyoutItem>

    <FlyoutItem Title="Beans" Icon="beans_icon.png">
        <ShellContent
            Title="Bean Inventory"
            ContentTemplate="{DataTemplate local:BeanInventoryPage}"
            Route="BeanInventoryPage" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="settings_icon.png">
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />
    </FlyoutItem>

</Shell>
