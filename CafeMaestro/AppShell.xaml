<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CafeMaestro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CafeMaestro"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home_icon.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Roast"
            Icon="roast_icon.png"
            ContentTemplate="{DataTemplate local:RoastPage}"
            Route="RoastPage" />

        <ShellContent
            Title="Roast Log"
            Icon="log_icon.png"
            ContentTemplate="{DataTemplate local:RoastLogPage}"
            Route="RoastLogPage" />

        <ShellContent
            Title="Beans"
            Icon="beans_icon.png"
            ContentTemplate="{DataTemplate local:BeanInventoryPage}"
            Route="BeanInventoryPage" />

        <ShellContent
            Title="Settings"
            Icon="settings_icon.png"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

</Shell>
